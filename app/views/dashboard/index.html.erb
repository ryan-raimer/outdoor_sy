<table class="table table-striped table-bordered table-sm table-hover" id="table">
  <thead>
    <tr>
      <th data-mdb-sort="true">Full Name</th>
      <th>Email</th>
      <th>Vehicle Type</th>
      <th>Vehicle Name</th>
      <th>Vehicle Length</th>
    </tr>
  </thead>
  <tbody>
    <% @vehicles.each do |vehicle| %>
    <tr>
      <td><%= vehicle.customer.full_name %></td>
      <td><%= vehicle.customer.email %></td>
      <td><%= vehicle.vehicle_type %></td>
      <td><%= vehicle.name %></td>
      <td><%= vehicle.length %> ft.</td>
    </tr>
    <% end %>
  </tbody>
</table>


<script>
  $(document).ready(function() {
    $('#table').DataTable();
  } );
</script>
